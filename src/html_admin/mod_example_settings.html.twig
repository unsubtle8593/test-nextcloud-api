{% extends request.ajax ? "layout_blank.html.twig" : "layout_default.html.twig" %}

{% import "macro_functions.html.twig" as mf %}

{% block meta_title %}Nextcloud API module settings{% endblock %}

{% set active_menu = 'system' %}

{% block content %}
<div class="card">
	<div class="card-header">
		<h3 class="card-title">{{ 'Nextcloud API module settings'|trans }}</h3>
    </div>

    <div class="card-body">
        <p>{{ 'You need to fill in the boxes below for the API to work correctly'|trans }}</p>

        {% set params = admin.extension_config_get({ "ext": "mod_example" }) %}

        <form method="post" action="{{ 'api/admin/extension/config_save'|link }}" class="api-form" data-api-msg="{{ 'Configuration updated'|trans }}">
            <input type="hidden" name="CSRFToken" value="{{ CSRFToken }}"/>
            <div class="mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'Username'|trans }}:</label>
                <div class="col">
                    <input class="form-control" type="text" name="custom_param" value="{{ params.custom_param }}" placeholder="{{ 'Username for Nextcloud user'|trans }}">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'Password'|trans }}:</label>
                <div class="col">
                    <input class="form-control" type="text" name="public[param]" value="{{ params.public.param }}" placeholder="{{ 'Password for the user you provided'|trans }}">
                </div>
            </div>

            <input type="submit" value="{{ 'Update'|trans }}" class="btn btn-primary">
            <input type="hidden" name="ext" value="mod_example" />
        </form>
    </div>
</div>
{% endblock %}
